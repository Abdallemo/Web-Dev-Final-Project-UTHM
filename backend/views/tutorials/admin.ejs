<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://unpkg.com/flowbite@1.6.4/dist/flowbite.min.js" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>


</head>

<body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <%- include('_nav_bar') %>
    
    <!-- Main Content -->
    <div class="container mx-auto mt-8">

        <!-- Page Title -->
        <h1 class="text-3xl font-bold mb-4">Reviews</h1>

        <!-- Review Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% reviews.forEach(function(review) { %>
                <div class="bg-white rounded-lg shadow-lg p-4">
                    <h2 class="text-xl font-bold mb-2">Review from <%= review.reviewEmail %></h2>
                    <p class="mb-4"><%= review.reviewmessage %></p>
                    <% if (review.reviewMedia && review.reviewMediaType) { %>
                        <img src="data:<%= review.reviewMediaType %>;base64,<%= review.reviewMedia.toString('base64') %>"
                            alt="Review Image" class="w-full h-auto mb-2">
                    <% } %>
                    <div class="flex justify-end">
                        <!-- Add any action buttons here -->
                    </div>
                </div>
            <% }); %>
        </div>

    </div>
    <script src="https://unpkg.com/flowbite@1.6.4/dist/flowbite.min.js"></script>

</body>

</html>
