<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Tutorial Website</title>
</head>
<body class="bg-opacity-75">
    <div class="container">
        <%- include('_nav_bar') %>
        <h1 class="mb-4">Tutorials available</h1>
        <% if (!user) { %>
        <a href="tutorials/login" class="btn btn-success">login</a>
        <a href="tutorials/register" class="btn btn-success">register</a>
        <% } %>

        <% if (user) { %>
            <a href="/logout" class="btn btn-warning">Logout</a>
          <% } %>
          
        <% if (user) { %>
            <a href="tutorials/new" class="btn btn-success">Add New Tutorial</a>
        <% } %>

        <% tutorials.forEach(tutorials => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= tutorials.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= tutorials.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb2">
                        <%= tutorials.Description %>
                    </div>
                    <a href="tutorials/<%= tutorials.slug %>" class="btn btn-primary">Read More</a>
                    
                    <% if (user && tutorials.user.equals(user._id)) { %>
                        <a href="tutorials/edit/<%= tutorials._id %>" class="btn btn-info">Edit</a>
                        <form action="/tutorials/<%= tutorials._id %>?_method=DELETE" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
